<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#15202B"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/text_app_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingStart="24dp"
        android:paddingTop="60dp"
        android:paddingEnd="24dp"
        android:text="AddQR"
        android:textColor="#00A3FF"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gestión y Rastreo de Inventario"
        android:textSize="18sp"
        android:textColor="#5A8FAD"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/text_app_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <LinearLayout
        android:id="@+id/main_button_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/text_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nav_container_footer"
        app:layout_constraintVertical_bias="0.0">


        <Button
            android:id="@+id/btn_scan_qr"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Escanear Activo (CÁMARA)"
            android:textColor="#15202B"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#FF8C00"
            android:layout_marginBottom="24dp"
            android:elevation="12dp"
            android:drawableStart="@android:drawable/ic_menu_camera"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:drawableTint="#15202B"/>

        <!-- Botón 2: Añadir Nuevo Activo -->
        <Button
            android:id="@+id/btn_add_new_asset"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Registrar Nuevo Activo"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:backgroundTint="#1A2C39"
            android:layout_marginBottom="12dp"
            android:elevation="6dp"
            android:drawableStart="@android:drawable/ic_input_add"
            android:drawableTint="#00A3FF"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"/>


        <Button
            android:id="@+id/btn_view_list"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Ver Inventario Completo"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:backgroundTint="#1A2C39"
            android:layout_marginBottom="12dp"
            android:elevation="6dp"
            android:drawableStart="@android:drawable/ic_menu_sort_by_size"
            android:drawableTint="#00A3FF"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/nav_container_footer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        

        <Button
            android:id="@+id/btn_view_map_quick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Ver en Mapa"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:drawableTop="@android:drawable/ic_dialog_map"
            android:drawableTint="#FF8C00"
            android:backgroundTint="@android:color/transparent"
            android:elevation="0dp"
            android:layout_marginEnd="8dp"/>


        <Button
            android:id="@+id/btn_settings"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Configuración"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:drawableTop="@android:drawable/ic_menu_preferences"
            android:drawableTint="#00A3FF"
            android:backgroundTint="@android:color/transparent"
            android:elevation="0dp"
            android:layout_marginEnd="8dp"/>


        <Button
            android:id="@+id/btn_about"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Acerca De"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:drawableTop="@android:drawable/ic_menu_info_details"
            android:drawableTint="#00A3FF"
            android:backgroundTint="@android:color/transparent"
            android:elevation="0dp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>