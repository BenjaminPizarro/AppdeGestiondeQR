<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#15202B"
    tools:context=".ScanQRActivity">

    <!-- 1. VISTA DE LA CÁMARA (Placeholder) -->
    <View
        android:id="@+id/camera_preview_surface"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#223344"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 2. MARCO VISOR (Guía visual para el usuario) -->
    <View
        android:id="@+id/qr_scanner_frame"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/scanner_frame_border"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 3. TEXTO DE INSTRUCCIÓN SUPERIOR -->
    <TextView
        android:id="@+id/tv_scanner_instruction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Apunta la cámara al código QR del activo"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/qr_scanner_frame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 4. TEXTO DE AYUDA INFERIOR -->
    <TextView
        android:id="@+id/tv_scanner_tip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="El escaneo es automático. Asegúrate de tener buena iluminación."
        android:textColor="#5A8FAD"
        android:textSize="14sp"
        android:textAlignment="center"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/qr_scanner_frame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 5. BOTÓN DE LINTERNA (Estilo de navegación transparente) -->
    <Button
        android:id="@+id/btn_toggle_flash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Linterna"
        android:textColor="#00A3FF"
        android:textSize="14sp"
        android:drawableTop="@android:drawable/ic_lock_idle_low_battery"
        android:drawableTint="#00A3FF"
        android:backgroundTint="@android:color/transparent"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>