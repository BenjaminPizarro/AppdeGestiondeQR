<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".NewAssetActivity">

    <EditText
        android:id="@+id/edit_qr_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Código QR (UUID autogenerado)"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del Activo"
        android:inputType="textCapWords"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/edit_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripción"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/edit_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Estado (Ej: Disponible, En Uso)"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/edit_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ubicación (Ej: Oficina 301)"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btn_save_asset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Activo" />

</LinearLayout>