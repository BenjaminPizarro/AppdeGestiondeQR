<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#15202B"> <!-- FONDO AZUL MARINO -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Tarjeta de Información Principal -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#1A2C39"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tv_asset_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre del Activo"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/tv_asset_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado: En Uso"
                    android:textSize="18sp"
                    android:textColor="#FF8C00"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#334455"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ubicación Actual"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#00A3FF"/>
                <TextView
                    android:id="@+id/tv_asset_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oficina Central, Piso 5"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Código QR"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#00A3FF"/>
                <TextView
                    android:id="@+id/tv_asset_qr_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QR-9876543210"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"/>
                
                <TextView
                    android:id="@+id/tv_asset_timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha de Registro: 01/01/2024"
                    android:textSize="12sp"
                    android:textColor="#5A8FAD"
                    android:layout_marginTop="12dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        
        <!-- Descripción -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción Detallada"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:id="@+id/tv_asset_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción del activo va aquí."
            android:textSize="16sp"
            android:textColor="#5A8FAD"
            android:background="@drawable/card_background"
            android:padding="12dp"
            android:layout_marginBottom="24dp"/>

        <!-- Botones de Acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Botón 1: Mover Activo (GPS) - NARANJA NEÓN -->
            <Button
                android:id="@+id/btn_move_asset"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Registrar Nueva Ubicación (GPS)"
                android:drawableStart="@android:drawable/ic_menu_mylocation"
                android:drawablePadding="10dp"
                android:backgroundTint="#FF8C00"
                android:textColor="#15202B"
                android:textStyle="bold"
                android:drawableTint="#15202B"
                android:layout_marginBottom="12dp"/>

            <!-- Botón 2: Ver Historial -->
            <Button
                android:id="@+id/btn_view_history"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Ver Historial de Movimientos"
                android:drawableStart="@android:drawable/ic_menu_recent_history"
                android:drawablePadding="10dp"
                android:backgroundTint="#1A2C39"
                android:textColor="#FFFFFF"
                android:drawableTint="#00A3FF"
                android:layout_marginBottom="12dp"/>

            <!-- Botón 3: Ver en Mapa (API) -->
            <Button
                android:id="@+id/btn_view_on_map"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Ver Última Ubicación en Mapa (API)"
                android:drawableStart="@android:drawable/ic_dialog_map"
                android:drawablePadding="10dp"
                android:backgroundTint="#1A2C39"
                android:textColor="#FFFFFF"
                android:drawableTint="#00A3FF"
                android:layout_marginBottom="12dp"/>
            
            <!-- Botón 4: Editar Activo (Actividad 10) -->
            <Button
                android:id="@+id/btn_edit_asset"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Editar Detalles del Activo"
                android:drawableStart="@android:drawable/ic_menu_edit"
                android:drawablePadding="10dp"
                android:backgroundTint="#2E4A62"
                android:textColor="#FFFFFF"
                android:drawableTint="#FFFFFF"
                android:layout_marginBottom="12dp"/>


        </LinearLayout>

    </LinearLayout>
</ScrollView>